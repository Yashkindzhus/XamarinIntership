<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PinsApp.Resources.Strings"
             x:Class="PinsApp.Views.LoginView"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True">
    <ContentPage.Content>
        <StackLayout Margin="30,30,30,30">
            <Entry Placeholder="{x:Static local:Strings.YourEmail}"
                   Text="{Binding Email}"/>
            <Entry Placeholder="{x:Static local:Strings.YourPassword}" IsPassword="True"
                   Text="{Binding Password}"/>
            <Button Text="{x:Static local:Strings.GoToMap}"
                    Command="{Binding LoginPressedCommand}"/>
            <Label Text="{x:Static local:Strings.DontHaveAnAccount}"/>
            <Button Text="{x:Static local:Strings.Register}"
                    Command="{Binding RegisterPressedCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
